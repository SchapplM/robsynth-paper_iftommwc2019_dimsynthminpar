\setbeamertemplate{caption}[numbered]
\setbeamertemplate{headline}{  
  \begin{beamercolorbox}[wd=\textwidth]{headline}
     \vskip25mm\centering
     \parbox{\linewidth}{\normalbaselines\centering\usebeamercolor{title in headline}\color{fg}{\includegraphics[scale=0.5]{./LOGO_imes_en_Schrift_rechts.pdf} \hfill \includegraphics[scale=0.5]{./luh_logo_rgb.pdf}\par}}%
     \vspace{20mm}
  \end{beamercolorbox}
