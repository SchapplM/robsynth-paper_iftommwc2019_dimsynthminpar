      \vskip3em%
      \ifdefined\researchfield%
      \parbox{\linewidth}
      {\normalbaselines\centering\usebeamercolor{title in headline}\color{fg}
      {\huge\researchfield}}%
      \vskip3em
      \fi%
      \parbox{\linewidth}
      {\normalbaselines\centering\usebeamercolor{title in headline}\color{fg}
      {\Huge\textbf{\inserttitle}}}%
      \vskip3em
  \end{beamercolorbox}
}

